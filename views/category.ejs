<%- include('partials/html-heads', { pageTitle: `${category} Menu` }) %> <%-
include('partials/nav') %>

<h1><%= category %> Menu</h1>
<ul>
  <% menuItems.forEach(item => { %>
  <li>
    <h3><%= item.name %> <% if (item.rating === 5) { %> ‚≠ê <% } %></h3>
    <p>Price: $<%= item.price.toFixed(2) %></p>
    <p>Rating: <%= item.rating %> stars</p>
    <p><%= item.details %></p>
  </li>
  <% }) %>
</ul>
