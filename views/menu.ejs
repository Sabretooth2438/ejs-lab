<h1>Full Menu</h1>

<h2>Mains</h2>
<ul>
  <% menu.filter(item => item.category === 'mains').forEach(item => { %>
  <li>
    <h3><%= item.name %></h3>
    <p>Price: $<%= item.price.toFixed(2) %></p>
    <p>Rating: <%= item.rating %> stars</p>
    <p><%= item.details %></p>
  </li>
